<%- include("navbar.ejs") %>

<!-- ✅ Bootstrap + DataTables CSS -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link
  href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css"
  rel="stylesheet"
/>
<link
  href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css"
  rel="stylesheet"
/>

<style>
  .title {
    background: linear-gradient(to right, #290566, #4b3f92, rgb(183, 121, 219));
    border-left: 7px solid orange;
    color: white;
    padding: 10px;
  }

  .table thead tr th {
    background-color: #ddd !important;
    font-weight: 600;
  }

  /* ✅ Hover effect */
  #billTable tbody tr {
    transition: all 0.2s ease-in-out;
  }
  #billTable tbody tr:hover {
    background-color: rgba(125, 87, 201, 0.08);
    transform: scale(1.01);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  /* ✅ Buttons styling */
  .dt-buttons .btn {
    background: linear-gradient(to right, #4b3f92, #7d57c9);
    color: #fff !important;
    border: none !important;
    border-radius: 6px !important;
    padding: 6px 14px !important;
    font-weight: 600 !important;
    margin-right: 8px !important;
    transition: 0.2s ease-in-out !important;
  }
  .dt-buttons .btn:hover {
    background: linear-gradient(to right, #5e3ca8, #4b3f92);
    transform: translateY(-2px);
    box-shadow: 0 2px 6px rgba(125, 87, 201, 0.4);
  }

  .table-responsive {
    padding: 20px;
  }

  /* ✅ Cursor pointer for clickable items */
  .vp-action-btn.delete,
  table a {
    cursor: pointer;
  }

  /* ✅ Responsive fix */
  @media (max-width: 767px) {
    div.dt-container .d-flex {
      flex-direction: column !important;
      align-items: stretch !important;
      gap: 10px !important;
    }
    .dt-buttons {
      text-align: center;
    }
  }

  /* ✅ Print styling */
  @media print {
    body {
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
      font-size: 14px;
    }
    #billTable thead tr {
      background: #000 !important;
      color: #fff !important;
    }
    table {
      border-collapse: collapse !important;
    }
    th,
    td {
      border: 1px solid #555 !important;
      padding: 6px !important;
    }
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mt-4 title">Bill Report</h1>

      <div class="table-responsive">
        <table
          id="billTable"
          class="table table-bordered mt-4 align-middle text-center"
        >
          <thead>
            <tr>
              <th>Bill ID</th>
              <th>Expense By</th>
              <th>Expense Given By</th>
              <th>Vendor Name</th>
              <th>Date</th>
              <th>Upload Bill</th>
              <th>Employee Signature</th>
              <th>Created at</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <% expenses.forEach(function(bill,i) { %>
            <tr>
              <td><%= bill.id %></td>
              <td><%= bill.expense_by %></td>
              <td><%= bill.expense_given_by %></td>
              <td><%= bill.vendor_name %></td>
              <td><%= bill.date %></td>
              <td>
                <% if(bill.bill_file){ %> <%
                if(bill.bill_file.endsWith('.pdf')){ %>
                <a href="/uploads/bills/<%= bill.bill_file %>" target="_blank"
                  >View Bill</a
                >
                <% } else { %>
                <img src="/uploads/bills/<%= bill.bill_file %>" width="100" />
                <% } %> <% } else { %> N/A <% } %>
              </td>
              <td>
                <% if(bill.employee_signature){ %>
                <img
                  src="/uploads/signatures/<%= bill.employee_signature %>"
                  width="100"
                />
                <% } else { %> N/A <% } %>
              </td>
              <td><%= bill.created_at %></td>
              <td><%= bill.total %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- ✅ jQuery + DataTables JS -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.colVis.min.js"></script>

<!-- ✅ DataTable Initialization -->
<script>
  $(document).ready(function () {
    $("#billTable").DataTable({
      dom: '<"d-flex flex-column flex-md-row justify-content-between align-items-center mb-2"fB>rt',
      paging: false,
      info: false,
      buttons: [
        { extend: "colvis", text: "Column Visibility" },
        { extend: "csv", text: "CSV" },
        {
          extend: "print",
          text: "Print",
          title: "Bill Report",
          customize: function (win) {
            $(win.document.body)
              .css("font-size", "14px")
              .prepend(
                '<h3 style="text-align:center; margin-bottom:20px;">Bill Report</h3>'
              );
          },
        },
      ],
    });
  });
</script>

