<%-include('navbar')%>
        <style>
            body {
                background: #f5f6fa;
                font-family: Arial, sans-serif;
            }

            .form-container {
                background: #fff;
                border-radius: 6px;
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
                padding: 0;
            }

            /* Main Section Header + Modal Header same color */
            .section-header,
            .modal-header-custom {
                background: linear-gradient(90deg, #1e3c72, #2a5298);
                color: #fff;
                font-weight: bold;
                padding: 10px 15px;
                border-left: 6px solid gold;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .modal-header-custom {
                border-radius: 4px 4px 0 0;
                font-weight: 600;
            }

            /* EMPLOYEE TYPE button (purple gradient as before) */
            .section-header .emp-type-btn {
                background: linear-gradient(90deg, #7b1fa2, #9c27b0);
                padding: 6px 12px;
                border-radius: 4px;
                font-size: 14px;
                text-decoration: none;
                color: white;
                font-weight: 500;
                cursor: pointer;
                transition: 0.3s;
            }

            .section-header .emp-type-btn:hover {
                background: #5e1283;
                color: #fff;
            }

            .form-label {
                font-weight: 600;
                font-size: 14px;
                text-transform: uppercase;
            }

            /* Black border for all inputs */
            .form-control,
            .form-select {
                border: 1px solid black !important;
            }

            .btn-save {
                background: #0000FF;
                color: #fff;
                font-weight: 500;
                padding: 8px 20px;
                border-radius: 4px;
                border: none;
                text-decoration: none;
                display: inline-block;
            }

            .btn-save:hover {
                background: #333;
                color: #fff;
            }

            .btn-reset {
                background: #dc3545;
                color: #fff;
                font-weight: 500;
                padding: 8px 20px;
                border-radius: 4px;
                border: none;
                margin-left: 10px;
            }

            .btn-reset:hover {
                background: #a71d2a;
            }

            .btn-add {
                background: #7b1fa2;
                color: white;
                font-weight: 500;
                border: none;
                border-radius: 4px;
                padding: 6px 20px;
            }

            .btn-add:hover {
                background: #5e1283;
            }

            .delete-btn {
                color: #7b1fa2;
                cursor: pointer;
                font-size: 18px;
            }

            .delete-btn:hover {
                color: red;
            }

            .form-control,
            .form-select,
            .btn,
            .emp-type-btn,
            .btn-save,
            .btn-reset,
            .btn-add {

                border-radius: 0 !important;
            }
        </style>

        <div class="container my-5">
            <div class="form-container">
                <!-- Header -->
                <div class="section-header">
                    <span>Add New Employee</span>
                    <a data-bs-toggle="modal" data-bs-target="#employeeTypeModal" class="emp-type-btn">EMPLOYEE TYPE</a>
                </div>

                <!-- Form -->
                <form class="p-4" action="/save_employee" method="POST" enctype="multipart/form-data">
                    <div class="row g-3">
                        <!-- New Field Added -->
                        <div class="col-md-6">
                            <label class="form-label">Employee Name *</label>
                            <input type="text" class="form-control" name="employee_name"
                                placeholder="Enter employee name" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Employee Email ID *</label>
                            <input type="email" class="form-control" name="employee_email"
                                placeholder="Enter employee email id" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Employee Mobile Number *</label>
                            <input type="text" class="form-control" name="employee_mobile"
                                placeholder="Enter employee mobile number" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Employee Date of Joining *</label>
                            <input type="date" class="form-control" name="employee_joining_date" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Employee Photo</label>
                            <input type="file" class="form-control" name="employee_photo">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Employee Address</label>
                            <input type="text" class="form-control" name="employee_address"
                                placeholder="Enter employee address">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">PAN Number</label>
                            <input type="text" class="form-control" name="pan_number" placeholder="Enter PAN number">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Aadhar Card Number</label>
                            <input type="text" class="form-control" name="aadhar_number"
                                placeholder="Enter Aadhar card number">
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Employee Password *</label>
                            <input type="password" class="form-control" name="employee_password"
                                placeholder="Enter employee password" required>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Employee DOB (Date of Birth)</label>
                            <input type="date" class="form-control" name="employee_dob">
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Position (Type of Work) *</label>
                            <input type="text" class="form-control" name="employee_position"
                                placeholder="Enter position of employee" required>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Enter Employee In Time *</label>
                            <input type="time" class="form-control" name="employee_in_time" required>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Employee Monthly Payment *</label>
                            <input type="number" class="form-control" name="employee_monthly_payment"
                                placeholder="Enter monthly payment" required>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Select Employee Type *</label>
                            <select class="form-select" name="employee_type" required>
                                <option value="">-- Select Type --</option>
                                <% result.forEach(function(type) { %>
                                    <option value="<%= type.id %>">
                                        <%= type.type_name %> - <%= type.type_description %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="text-end mt-5">
                        <button type="submit" class="btn-save">SAVE EMPLOYEE</button>
                        <button type="reset" class="btn-reset">RESET</button>
                    </div>
                </form>


            </div>
        </div>

        <!-- Employee Type Modal -->
        <div class="modal fade" id="employeeTypeModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header-custom">EMPLOYEE TYPES</div>
                    <div class="modal-body">
                        <!-- Static form inside modal -->
                        <form class="row g-3 align-items-end" action="/save_type" method="POST" onsubmit="callspeak()">
                            <div class="col-md-5">
                                <label class="form-label">TYPE</label>
                                <input type="text" class="form-control" placeholder="ENGINEER, ACCOUNTANT" name="type"
                                    required>
                            </div>
                            <div class="col-md-5">
                                <label class="form-label">DETAILS</label>
                                <input type="text" class="form-control" placeholder="ENGINEER, OFFICE STAFF,"
                                    name="details" required>
                            </div>
                            <div class="col-md-2 text-end">
                                <button type="submit" class="btn-add">ADD</button>
                            </div>
                        </form>

                        <!-- Static Table -->
                        <div class="table-responsive mt-4">
                            <table class="table table-bordered align-middle text-center">
                                <thead class="table-light">
                                    <tr>
                                        <th>TYPE</th>
                                        <th>DETAILS</th>
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%for(var i=0;i<result.length;i++){%>
                                        <tr>
                                            <td><%-result[i].type_name%></td>
                                            <td><%-result[i].type_description%></td>
                                            <td><span class="delete-btn"><i class="fa fa-trash"></i></span></td>
                                        </tr>
                                        <%}%>


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function speak(text) {
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.lang = "hi-IN";
                utterance.rate = 0.9;
                utterance.pitch = 1;
                speechSynthesis.speak(utterance);
            }
            function callspeak() {
                speak("कर्मचारी सफलतापूर्वक जोड़ दिया गया है");
            }
            document.querySelectorAll(".delete-btn").forEach(btn => {
                btn.addEventListener("click", () => {
                    speak("कर्मचारी सफलतापूर्वक हटाया गया है");
                });
            });
        </script>

    </body>

    </html>
    <%-include('footer')%>