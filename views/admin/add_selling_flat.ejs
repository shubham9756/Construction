<%-include('navbar.ejs')%>
    <style>
        .table thead {
            background-color: #4d4d4d;
            color: #fff;
            text-transform: uppercase;
        }

        .btn-adv {
            background-color: #9b59b6;
            color: #fff;
            border-radius: 6px;
            padding: 6px 15px;
        }

        .btn-adv:hover {
            background-color: #8e44ad;
            color: #fff;
        }

        .btn-filter {
            background-color: #9b59b6;
            /* Purple color */
            color: #fff;
            border-radius: 6px;
            padding: 6px 15px;
        }

        .btn-filter:hover {
            background-color: #8e44ad;
            color: #fff;
        }

       
        .btn-sell {
            background-color: #1abc9c;
            color: #fff;
            border-radius: 6px;
        }
         .btn-sell:hover {
            background-color: #1abc9c;
            color: #fff;
            border-radius: 6px;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background-color: #9b59b6 !important;
            color: #fff !important;
            border: none !important;
            border-radius: 4px;
        }

        #filterBox {
            display: none;
        }

        /* hidden by default */
    </style>

    <div class="container p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="fw-bold text-uppercase text-secondary m-0">All Flat List Properties</h6>
            <button id="toggleFilter" class="btn btn-adv">
                <i class="fa fa-search"></i> Advance Search
            </button>
        </div>

        <!-- Filter Form (hidden initially) -->
        <div id="filterBox" class="card shadow-sm mb-3">
            <div class="card-body">
                <form id="filterForm" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">From Date</label>
                        <input type="date" id="fromDate" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">To Date</label>
                        <input type="date" id="toDate" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Site</label>
                        <select id="siteFilter" class="form-select">
                            <option value="">All Sites</option>
                            <option>PRATHMESH ELITE</option>
                            <option>GREEN VALLEY</option>
                            <option>ROYAL RESIDENCY</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="button" id="applyFilter" class="btn btn-filter">
                            <i class="fa fa-filter"></i> Filter
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table -->
        <div class="card shadow-sm">
            <div class="card-body ">
                <table id="propertiesTable" class="table table-striped table-bordered align-middle" style="width:100%">
                    <thead class="mt-4">
                        <tr>
                            <th>Actions</th>
                            <th>Flat Name/No</th>
                            <th>Type</th>
                            <th>Site Name</th>
                            <th>Dimensions</th>
                            <th>Added Date</th>
                            <th>Address</th>
                            <th>Sale Action</th>
                        </tr>   
                    </thead>
                    <tbody>
                        <%for (var i=0; i<flat.length; i++) { %>
                        <tr>
                            <td>
                                <a href="/view_flat/<%-flat[i].flat_id%>"><button class="btn btn-sm btn-outline-primary"><i class="fa fa-eye"></i></button></a>

                               <a href="/delete_flat/<%-flat[i].flat_id%>" > <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></button></a>
                            </td>
                            <td><%-flat[i].flat_name %></td>
                            <td><%-flat[i].type %></td>
                            <td><%-flat[i].site_name %> </td>
                            <td><%-flat[i].carpet %>/<%-flat[i].buildup %></td>
                            <td><%-flat[i].site_location %></td>
                            <td><%-flat[i].site_description %></td>
                            <td>
                                <a href="/view/<%-flat[i].flat_id%>"><button class="btn btn-sm btn-sell"><i class="fa fa-handshake"></i> SELL</button></td></a>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize DataTable with arrows + numbers
            var table = $('#propertiesTable').DataTable({
                "pagingType": "simple_numbers", // arrows + numbers
                "language": {
                    "paginate": {
                        "previous": "‹",
                        "next": "›"
                    }
                },
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
            });

            // Toggle Advance Search box
            $('#toggleFilter').on('click', function () {
                $('#filterBox').slideToggle();
            });

            // Apply Filter
            $('#applyFilter').on('click', function () {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();
                var site = $('#siteFilter').val();

                $.fn.dataTable.ext.search = [];
                $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
                    var addedDate = data[6]; // Added Date column
                    var siteName = data[4];  // Site Name column

                    // Date filtering
                    if (fromDate && new Date(addedDate) < new Date(fromDate)) return false;
                    if (toDate && new Date(addedDate) > new Date(toDate)) return false;

                    // Site filtering
                    if (site && siteName !== site) return false;

                    return true;
                });

                table.draw();
            });
        });
    </script> 

