<%-include('navbar.ejs')%>
<style>
  .form-control {
    border: 2px solid black;
    border-radius: 0px;
  }
</style>
<br />
<br />
<div class="container mt-5">
  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-header bg-primary text-white fw-bold text-uppercase">
      Add New Contractor
    </div>
    <div class="card-body">
     <form id="contractorForm" class="needs-validation" action="/add-contractor" method="POST" enctype="multipart/form-data" novalidate> 
  <div class="row g-4">

    <!-- Contractor Name -->
    <div class="col-md-6">
      <label class="form-label">Contractor Name*</label>
      <input type="text" class="form-control" name="contractor_name" placeholder="Enter Contractor Name" required />
      <div class="invalid-feedback">Contractor Name is required.</div>
    </div>

    <!-- Contractor Address -->
    <div class="col-md-6">
      <label class="form-label">Contractor Address*</label>
      <input type="text" class="form-control" name="contractor_address" placeholder="Enter Contractor Address" required />
      <div class="invalid-feedback">Contractor Address is required.</div>
    </div>

    <!-- Contractor Other Details -->
    <div class="col-md-6">
      <label class="form-label">Contractor Other Details</label>
      <input type="text" class="form-control" name="contractor_details" placeholder="Enter Contractor Other Details" />
    </div>

    <!-- Contractor Mobile -->
    <div class="col-md-6">
      <label class="form-label">Contractor Mobile*</label>
      <input type="tel" class="form-control" name="contractor_mobile" placeholder="Enter Mobile Number" required pattern="[0-9]{10}" />
      <div class="invalid-feedback">Enter a valid 10-digit mobile number.</div>
    </div>

    <!-- Contractor Aadhar -->
    <div class="col-md-6">
      <label class="form-label">Contractor Aadhar Card No</label>
      <input type="text" class="form-control" name="contractor_aadhar" placeholder="Aadhar Card Number" pattern="[0-9]{12}" />
      <div class="invalid-feedback">Aadhar must be 12 digits.</div>
    </div>

    <!-- Contractor PAN -->
    <div class="col-md-6">
      <label class="form-label">Contractor PAN Card No</label>
      <input type="text" class="form-control" name="contractor_pan" placeholder="PAN Card Number" pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" />
      <div class="invalid-feedback">Enter a valid PAN (ABCDE1234F).</div>
    </div>

    <!-- Contractor Image -->
    <div class="col-md-6">
      <label class="form-label">Contractor Image</label>
      <input type="file" class="form-control" name="contractor_image" />
    </div>

    <!-- Contractor Type -->
    <div class="col-md-6">
      <label class="form-label">Contractor Type</label>
      <div class="input-group">
        <input type="text" class="form-control" name="contractor_type" id="mainContractorType" placeholder="Enter Contractor Type" />
        <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#contractorTypeModal">+</button>
      </div>
    </div>

  </div>

  <!-- Buttons -->
  <div class="text-end mt-4">
    <button type="submit" class="btn btn-success px-4">Add Contractor</button>
    <button type="reset" class="btn btn-secondary px-4">Reset</button>
  </div>
</form>

    </div>
  </div>
</div>
<!-- Modal for Adding Contractor Type -->
<div class="modal fade" id="contractorTypeModal" tabindex="-1" aria-labelledby  
="contractorTypeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title " id="contractorTypeModalLabel">Add Contractor Type</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="contractorTypeForm" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="contractorTypeInput" class="form-label">Contractor Type*</label>
            <input type="text" class="form-control" id="contractorTypeInput" placeholder="Enter Contractor Type" required />
            <div class="invalid-feedback">Contractor Type is required.</div>
          </div>
          <div class="text-end">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Add Type</button>
          </div>
        </form>
        </div>
    </div>
  </div>    


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  (function () {
    "use strict";
    const form = document.getElementById("contractorForm");
    form.addEventListener("submit", function (event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add("was-validated");
    });
  })();
</script>
