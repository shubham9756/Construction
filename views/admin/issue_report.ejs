<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Issue Stock Report</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body { background:#f5f6fa; }
    .header-bar {
      background:#1e3a8a;
      color:#fff;
      padding:12px 16px;
      display:flex;
      justify-content:space-between;
      align-items:center;
      border-radius:4px 4px 0 0;
      position:relative;
    }
    .header-bar::before {
      content:"";
      position:absolute;
      left:0;
      top:0;
      bottom:0;
      width:6px;
      background:#fbbf24;
    }
    .header-bar h5 {
      margin:0;
      padding-left:12px;
      font-weight:bold;
      letter-spacing:0.5px;
    }
    .btn-adv {
      background:linear-gradient(180deg,#a855f7,#6d28d9);
      border:none;
      font-weight:600;
      color:#fff;
      box-shadow:0 2px 6px rgba(0,0,0,0.2);
    }
    .search-form {
      background:#fff;
      border:1px solid #ddd;
      border-top:none;
      padding:16px;
      display:none;
    }
    .table thead {
      background:#f1f5f9;
    }
    .no-data {
      color:red;
      font-weight:bold;
      text-align:center;
      padding:20px 0;
    }
  </style>
</head>
<body>

<div class="container my-4">
  <div class="card shadow-sm">

    <!-- HEADER -->
    <div class="header-bar">
      <h5>ISSUE STOCK REPORT</h5>
      <button class="btn btn-sm btn-adv px-3" onclick="toggleSearch()">ADV. SEARCH</button>
    </div>

    <!-- ADV. SEARCH FORM -->
    <div id="advSearchForm" class="search-form">
      <div class="row g-3 align-items-end">
        <div class="col-md-3">
          <label class="form-label fw-bold">FROM</label>
          <input type="date" class="form-control" value="2025-09-01">
        </div>
        <div class="col-md-3">
          <label class="form-label fw-bold">TO</label>
          <input type="date" class="form-control" value="2025-09-13">
        </div>
        <div class="col-md-3">
          <label class="form-label fw-bold">SELECT SITE</label>
          <select class="form-select">
            <option>All</option>
            <option>Site A</option>
            <option>Site B</option>
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label fw-bold">SELECT PRODUCT</label>
          <select class="form-select">
            <option>All</option>
            <option>Bricks</option>
            <option>Cement</option>
          </select>
        </div>
      </div>
      <div class="text-end mt-3">
        <button class="btn btn-adv px-4">SEARCH</button>
      </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive">
      <table class="table table-bordered table-striped text-center align-middle mb-0">
        <thead>
          <tr>
            <th>SN</th>
            <th>SITE</th>
            <th>PRODUCT</th>
            <th>ISSUED QTY</th>
            <th>ISSUED DATE</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="5" class="no-data">NO DATA AVAILABLE IN <span class="text-uppercase">SEPTEMBER - 2025</span></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function toggleSearch() {
    const form = document.getElementById("advSearchForm");
    form.style.display = (form.style.display === "none" || form.style.display === "") ? "block" : "none";
  }
</script>
</body>
</html>

