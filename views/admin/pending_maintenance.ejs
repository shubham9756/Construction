<script>
  function showForm() {
    document.getElementById("tableSection").classList.add("hidden");
    document.getElementById("viewForm").classList.add("hidden");
    document.getElementById("receivedForm").classList.remove("hidden");
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
  function backToTable() {
    document.getElementById("receivedForm").classList.add("hidden");
    document.getElementById("viewForm").classList.add("hidden");
    document.getElementById("tableSection").classList.remove("hidden");
  }
  function showViewForm() {
    document.getElementById("tableSection").classList.add("hidden");
    document.getElementById("receivedForm").classList.add("hidden");
    document.getElementById("viewForm").classList.remove("hidden");
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
  function openAddTransaction() {
    document.getElementById("viewForm").classList.add("hidden");
    document.getElementById("receivedForm").classList.remove("hidden");
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
