<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Maintenance Site List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .card-header {
      background: linear-gradient(to right, #2c1e8f, #9c4dcc);
      color: white;
      font-weight: 600;
      font-size: 1.3rem;
    }
    table {
      border-collapse: collapse;
      width: 100%;
    }
    thead {
      background-color: #2c1e8f;
      color: white;
    }
    tbody tr:hover {
      background-color: #f6f6ff;
    }
    .btn-edit {
      background-color: #ffc107;
      border: none;
      color: white;
      border-radius: 6px;
      padding: 5px 10px;
    }
    .btn-delete {
      background-color: #dc3545;
      border: none;
      color: white;
      border-radius: 6px;
      padding: 5px 10px;
    }
  </style>
</head>
<body>
  <div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0">
      <div class="card-header">
        ðŸ§¾ Pending Maintenance List
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered align-middle text-center">
            <thead>
              <tr>
                <th>Sr. No</th>
                <th>Site Name</th>
                <th>Location</th>
                <th>Status</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody>
              <% if (result.length > 0) { %>
                <% result.forEach((site, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= site.site_name %></td>
                    <td><%= site.location %></td>
                    <td>
                      <% if (site.status === "Completed") { %>
                        <span class="badge bg-success">Completed</span>
                      <% } else if (site.status === "In Progress") { %>
                        <span class="badge bg-warning text-dark">In Progress</span>
                      <% } else { %>
                        <span class="badge bg-secondary"><%= site.status %></span>
                      <% } %>
                    </td>
                    <td><%= site.description %></td>
                    
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-muted">No Maintenance result Found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
