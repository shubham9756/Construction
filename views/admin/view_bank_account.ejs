<!-- Top Title -->
<div class="card-wrap mb-4 mt-5">
  <span class="top-title">VIEW BANK ACCOUNT </span>
  <div class="p-3">
    <div class="row">
      
      <!-- Left Side Info -->
      <div class="col-md-6">
        <!-- Purple Title -->
        <div class="section-title">BANK DETAILS</div>
        <div class="table-responsive">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th>BANK NAME</th>
                <td><%= data[0].bank_name %></td>
              </tr>
              <tr>
                <th>HOLDER NAME</th>
                <td><%= data[0].account_holder %></td>
              </tr>
              <tr>
                <th>ACCOUNT NUMBER</th>
                <td><%= data[0].account_number %></td>
              </tr>
              <tr>
                <th>IFSC CODE</th>
                <td><%= data[0].ifsc_code %></td>
              </tr>
              <tr>
                 <th class="balance-th">CURRENT BALANCE</th>
                <td class="balance-th">₹ <%= data[0].current_balance %> </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Right Side Transactions -->
      <div class="col-md-6">
        <!-- Purple Title -->
        <div class="section-title">RECENT 10 TRANSACTIONS</div>
        <div class="table-responsive">
          <table class="table table-bordered text-center align-middle">
            <thead>
              <tr>
                <th>SN</th>
                <th>Date</th>
                <th>Credit</th>
                <th>Debit</th>
                <th>Details</th>
                
              </tr>
            </thead>
            <tbody>
                <% for(var i=0;i<result.length;i++) { %>
              <tr>
                <td><%-i+1 %></td>
                <td><%- result[i].transaction_date %></td>
                <td>₹ <%= result[i].transaction_type === 'Credit' ? result[i].transaction_amount : 0 %> /-</td>
                <td>₹ <%= result[i].transaction_type === 'Debit' ? result[i].transaction_amount : 0 %> /-</td>
                <td><%- result[i].transaction_details %></td>
              </tr>
                <% } %>
             
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>


<!-- Add Bank Account Form -->
<div class="card-wrap">
  <span class="top-title"> NEW TRANSACTION</span>
 <form class="form-exact" action="/save_transaction" method="post" enctype="multipart/form-data">
  
  <!-- hidden account id -->
  <input type="hidden" name="account_id" value="<%= data[0].account_id %>">

  <div class="row">
    <div class="mb-3 col-md-4">
      <label class="form-label">SELECT TRANSACTION DATE</label>
      <input type="date" class="form-control" name="transaction_date" required>
    </div>
    <div class="mb-3 col-md-4">
      <label class="form-label">SELECT TRANSACTION AMOUNT</label>
      <input type="number" class="form-control" name="transaction_amount" required>
    </div>
    <div class="mb-3 col-md-4">
      <label class="form-label">CREDIT / DEBIT</label>
      <select class="form-control" name="transaction_type" required>
        <option>Credit</option>
        <option>Debit</option>
      </select>
    </div>

    <div class="mb-3 col-md-6">
      <label class="form-label">SELECT PAYMENT TYPE</label>
      <select class="form-control" name="payment_type" required>
        <option>Cash</option>
        <option>UPI</option>
        <option>Net Banking</option>
      </select>
    </div>

    <div class="mb-3 col-md-6">
      <label class="form-label">TRANSACTION DETAILS</label>
      <input type="text" class="form-control" name="transaction_details" required>
    </div>
  </div>

  <div class="text-center mt-3">
    <button type="submit" class="btn btn-purple">
      <i class="fas fa-plus-circle"></i> ADD TRANSACTION
    </button>
  </div>
</form>

</div>

