<%- include('navbar.ejs') %>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <div class="container mt-5">
    <div class="card shadow-lg">
      <div class="card-header bg-dark text-white">
        <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i>Godown Order Form</h4>
      </div>
      <div class="card-body">
        <form action="/admin/save_godown_order" method="POST">
          <div class="row g-3">

            <!-- Company Name -->
            <div class="col-md-4">
              <label for="company_name" class="form-label">Company Name</label>
              <input type="text" id="company_name" name="company_name" class="form-control"
                placeholder="Enter Company Name" required>
            </div>

            <!-- Material Type -->
            <div class="col-md-4">
              <label for="material_type" class="form-label">Material Type</label>
              <select name="material_type" id="material_type" class="form-select" required>
                <option value="">--- Select Material Type ---</option>
                <option value="Raw">Raw</option>
                <option value="Glass">Glass</option>
                <option value="Steel">Steel</option>
                <option value="Wood">Wood</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <!-- Product Name -->
            <div class="col-md-4">
              <label for="product_name" class="form-label">Product</label>
              <input type="text" id="product_name" name="product_name" class="form-control"
                placeholder="Enter Product Name" required>
            </div>

            <!-- Quantity -->
            <div class="col-md-4">
              <label for="quantity" class="form-label">Quantity</label>
              <input type="text" id="quantity" name="quantity" class="form-control" placeholder="Enter Quantity"
                required>
            </div>

            <!-- Order Date -->
            <div class="col-md-4">
              <label for="order_date" class="form-label">Order Date</label>
              <input type="date" id="order_date" name="order_date" class="form-control" required>
            </div>

            <!-- Delivery Date -->
            <div class="col-md-4">
              <label for="delivery_date" class="form-label">Expected Delivery Date</label>
              <input type="date" id="delivery_date" name="delivery_date" class="form-control">
            </div>

            <!-- Location -->
            <div class="col-md-4">
              <label for="location" class="form-label">Location</label>
              <input type="text" id="location" name="location" class="form-control" placeholder="Enter Location"
                required>
            </div>

            <!-- Remarks -->
            <div class="col-md-12">
              <label for="remarks" class="form-label">Remarks</label>
              <textarea id="remarks" name="remarks" rows="2" class="form-control"
                placeholder="Additional notes..."></textarea>
            </div>

          </div>

          <!-- Submit Button -->
          <div class="row mt-4">
            <div class="col-md-12 text-end">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-save me-2"></i>Submit Order
              </button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>

  <%- include('footer.ejs') %>