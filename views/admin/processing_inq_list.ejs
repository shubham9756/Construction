<%- include('navbar.ejs') %>

<!-- ✅ Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

<style>
  :root {
    --blue-header: #1a3da8;
    --orange-accent: #ff8a00;
    --purple-btn: #7d57c9;
  }

  body {
    background-color: #f8f9fa;
  }

  .top-title {
    background: linear-gradient(to right, #290566, #4b3f92, rgb(183, 121, 219));
    color: #fff;
    font-weight: 800;
    padding: 12px 16px;
    font-size: 18px;
    letter-spacing: 0.3px;
    display: block;
    border-left: 6px solid var(--orange-accent);
    margin-top: 30px;
  }

  .bott {
    background: linear-gradient(90deg, #291634, #7a3eb1);
  }

  /* ✅ Table Hover */
  #vendorTable.dataTable tbody tr {
    transition: all 0.2s ease-in-out;
  }
  #vendorTable.dataTable tbody tr:hover {
    background-color: rgba(125, 87, 201, 0.1);
    transform: scale(1.02);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  /* ✅ Buttons */
  .dt-buttons .btn {
    background-color: var(--purple-btn) !important;
    color: #fff !important;
    border: none !important;
    border-radius: 6px;
    padding: 6px 12px;
    font-weight: 600;
    transition: 0.2s ease;
    margin-right: 6px;
  }

  .dt-buttons .btn:hover {
    background-color: #5e3ca8 !important;
    transform: translateY(-2px);
    box-shadow: 0 2px 6px rgba(125, 87, 201, 0.4);
  }

  /* ✅ Action Buttons */
  .vp-action-btn {
    margin: 0 5px;
    font-size: 18px;
    cursor: pointer;
    transition: transform 0.2s ease;
  }
  .vp-action-btn:hover {
    transform: scale(1.2);
  }
  .vp-action-btn.view { color: #17a2b8; }
  .vp-action-btn.edit { color: #ffc107; }
  .vp-action-btn.delete { color: #dc3545; }

  /* ✅ Responsive Fix for mobile */
  @media (max-width: 767px) {
    div.dt-container .d-flex {
      flex-direction: row !important;
      justify-content: space-between !important;
      align-items: center !important;
      flex-wrap: wrap;
      gap: 5px;
    }
    div.dt-container .dataTables_filter {
      flex: 1;
    }
    div.dt-container .dt-buttons {
      flex-shrink: 0;
    }
  }
</style>

<body class="p-3">
  <div class="container">
    <!-- Header -->
    <span class="top-title d-flex justify-content-between align-items-center">
      Vendor Purchase Inquiries
     
    </span>

    <!-- Table -->
    <div class="table-responsive mt-3">
      <table id="vendorTable" class="table table-bordered align-middle text-center">
        <thead class="table-light">
          <tr>
            <th>SrNo</th>
            <th>Vendor Name</th>
            <th>Purchase Date</th>
            <th>Purchase Type</th>
            <th>Grand Total (₹)</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < inquiries.length; i++) { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= inquiries[i].vendor_name %></td>
            <td><%= inquiries[i].purchase_date.toISOString().slice(0,10) %></td>
            <td><%= inquiries[i].purchase_type %></td>
            <td><%= inquiries[i].total %></td>
            <td>
              <a href="/view_bill/<%= inquiries[i].inquiry_id %>" class="vp-action-btn view" title="View">
                <i class="fa fa-eye"></i>
              </a>
             
              <a href="/delete_inquiry/<%= inquiries[i].inquiry_id %>" class="vp-action-btn delete" title="Delete">
                <i class="fa fa-trash"></i>
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- ✅ jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

  <!-- ✅ DataTables JS -->
  <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

  <!-- ✅ DataTables Buttons -->
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.colVis.min.js"></script>

  <!-- ✅ DataTable Initialization -->
  <script>
    $(document).ready(function () {
      $('#vendorTable').DataTable({
        paging: false,
        info: false,
        dom: '<"d-flex flex-column flex-md-row justify-content-between align-items-center mb-2"fB>rt',
        buttons: [
          { extend: 'colvis', text: 'Column Visibility' },
          'csv', 'print'
        ]
      });
    });
  </script>

