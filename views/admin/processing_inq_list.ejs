<%- include('navbar.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

<style>
body {
  background: #f8f9fa;
}
.vp-container {
  max-width: 1300px;
  margin-top: 40px;
}
.vp-header {
  background: linear-gradient(to right, #FFD700 0.5%, #264db5 0.5%);
  color: #fff;
  font-weight: bold;
  padding: 15px 20px;
  font-size: 20px;
  text-transform: uppercase;
  border-radius: 5px;
}
.vp-table th {
  text-align: center;
  vertical-align: middle;
  font-weight: 900;  
  font-size: 25px;

}

.vp-table td {
  text-align: center;
  vertical-align: middle;
  font-size: 15px;    /* normal content size */
}

.vp-table td:nth-child(2) {
  font-weight: 700;   /* फक्त Vendor Name column bold */
  color: #264db5;     /* optional: blue highlight */
}

.vp-action-btn {
  margin: 0 5px;
  font-size: 18px;
  cursor: pointer;
}
.vp-action-btn.view { color: #17a2b8; }
.vp-action-btn.edit { color: #ffc107; }
.vp-action-btn.delete { color: #dc3545; }
</style>

<div class="vp-container">
  <div class="vp-header">Vendor Purchase Inquiries</div>

  <div class="table-responsive mt-3">
    <table class="table table-bordered table-striped vp-table">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Vendor Name</th>
          <th>Purchase Date</th>
          <th>Purchase Type</th>
          <th>Grand Total</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<inquiries.length; i++){ %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= inquiries[i].vendor_name %></td>
            <td><%= inquiries[i].purchase_date.toISOString().slice(0,10) %></td>
            <td><%= inquiries[i].purchase_type %></td>
            <td>₹ <%= inquiries[i].total %></td>
            <td>
              <a href="#" class="vp-action-btn view"><i class="fa fa-eye"></i></a>
              <a href="#" class="vp-action-btn edit" 
                 data-bs-toggle="modal" data-bs-target="#editModal"
                 data-id="<%= inquiries[i].inquiry_id %>"
                 data-vendor="<%= inquiries[i].vendor_name %>"
                 data-date="<%= inquiries[i].purchase_date.toISOString().slice(0,10) %>"
                 data-type="<%= inquiries[i].purchase_type %>"
                 data-total="<%= inquiries[i].total %>">
                 <i class="fa fa-pen"></i>
              </a>
              <a href="#" class="vp-action-btn delete"><i class="fa fa-trash"></i></a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>


<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">Update Inquiry</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <form method="POST" action="/admin/update_inquiry">
        <div class="modal-body">
          <input type="hidden" name="inquiry_id" id="inquiryId">
          <div class="mb-3">
            <label class="form-label">Vendor Name</label>
            <input type="text" class="form-control" name="vendor_name" id="vendorName" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Purchase Date</label>
            <input type="date" class="form-control" name="purchase_date" id="purchaseDate" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Purchase Type</label>
            <select class="form-select" name="purchase_type" id="purchaseType">
              <option value="State">State</option>
              <option value="Interstate">Interstate</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Grand Total</label>
            <input type="number" class="form-control" name="total" id="grandTotal" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Update</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Fill modal with data from table row
  document.querySelectorAll('.vp-action-btn.edit').forEach(btn => {
    btn.addEventListener('click', function () {
      document.getElementById('inquiryId').value = this.getAttribute('data-id');
      document.getElementById('vendorName').value = this.getAttribute('data-vendor');
      document.getElementById('purchaseDate').value = this.getAttribute('data-date');
      document.getElementById('purchaseType').value = this.getAttribute('data-type');
      document.getElementById('grandTotal').value = this.getAttribute('data-total');
    });
  });
</script>

