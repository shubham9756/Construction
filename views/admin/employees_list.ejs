<%- include('navbar.ejs') %>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- DataTables CSS -->
<link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">

<style>
  /* Title with blue background */
  .title {
    border-left: 8px solid gold; /* Golden left border */
    font-size: 20px;
    font-weight: bold;
    /* text-align: center; */
    margin-bottom: 20px;
    background-color: rgb(5, 5, 118);  /* Blue background */
    color: #fff;             /* White text */
    padding: 10px 0;
    border-radius: 5px;
  }

  table.dataTable thead th {
    background-color: #ffffff !important; /* Keep table header white */
    color: #000000 !important;
    text-align: center;
  }

  table.dataTable tbody td {
    text-align: center;
  }
</style>

<body class="bg-light p-4">

<div class="container mt-5">
  <div class="title"><h3 class="ms-3 fw-bold">Employee List</h3>
  </div> <!-- Blue background applied here -->

  <div class="table-responsive">
    <table id="employeeTable" class="table table-bordered table-striped align-middle">
      <thead>
        <tr>
         
          <th>SrNO</th>
          <th>Name</th>
          <th>Mobile</th>
          <th>Email</th>
          <th>Position</th>
           <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < employees.length; i++) { %>
        <tr>
          
          <td><%= i + 1 %></td>
          <td><%= employees[i].employee_name %></td>
          <td><%= employees[i].employee_mobile %></td>
          <td><%= employees[i].employee_email %></td>
          <td><%= employees[i].employee_position %></td>
          <td>
            <a href="/delete_employee/<%= employees[i].employee_id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
            <a href="/edit_employee/<%= employees[i].employee_id %>" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- jQuery + DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

<script>
  $(document).ready(function () {
    $('#employeeTable').DataTable({
      responsive: true,
      pageLength: 5,
      lengthChange: false,  
      searching: true       
    });
  });
</script>

