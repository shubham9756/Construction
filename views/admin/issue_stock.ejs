<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Material List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .card-header {
      background: linear-gradient(to right, #2c1e8f, #9c4dcc);
      color: white;
      font-weight: 600;
      font-size: 1.3rem;
    }
    table {
      border-collapse: collapse;
      width: 100%;
    }
    thead {
      background-color: #2c1e8f;
      color: white;
    }
    tbody tr:hover {
      background-color: #f6f6ff;
    }
    .btn-edit {
      background-color: #ffc107;
      border: none;
      color: white;
      border-radius: 6px;
      padding: 5px 10px;
    }
    .btn-delete {
      background-color: #dc3545;
      border: none;
      color: white;
      border-radius: 6px;
      padding: 5px 10px;
    }
  </style>
</head>
<body>
  <div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0">
      <div class="card-header">
        ðŸ“¦ Material List
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered align-middle text-center">
            <thead>
              <tr>
                <th>Sr. No</th>
                <th>Material Name</th>
                <th>HSN Code</th>
                <th>GST Rate (%)</th>
                <th>CGST Rate (%)</th>
                <th>Created At</th>
              </tr>
            </thead>
            <tbody>
              <% if (result.length > 0) { %>
                <% result.forEach((mat, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= mat.material_name %></td>
                    <td><%= mat.hsn_code %></td>
                    <td><%= mat.gst_rate %></td>
                    <td><%= mat.cgst_rate %></td>
                    <td><%= mat.created_at.toLocaleDateString('en-IN') %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-muted">No Material Records Found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
