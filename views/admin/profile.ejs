<%- include('navbar.ejs') %>

<!-- Bootstrap + FontAwesome + Custom CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="/css/admin.css">

<style>
  /* ðŸ”µ Header Styling - Force Blue Header */
  .profile-header {
    background-color: #1225d4 !important;   /* âœ… Force blue color */
    color: #fff;
    font-weight: 800;
    padding: 10px 16px;
    font-size: 16px;
    border-left: 6px solid orange;          /* Orange accent stripe */
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
</style>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">

      <!-- Profile Card -->
      <div class="card shadow-lg border-0  overflow-hidden">

        <!-- ðŸ”µ Header -->
        <div class="card-header profile-header">
          <h3 class="mb-0 fw-bold">
            <i class="fa-solid fa-user-circle me-2"></i> ADMIN PROFILE
          </h3>
        </div>

        <!-- âšª Body -->
        <div class="card-body p-4">
          <form action="/admin/save_profile" method="post" enctype="multipart/form-data">
            <input type="hidden" name="admin_id" value="<%= admin.admin_id %>">

            <div class="row mb-4">
              <!-- Profile Photo -->
              <div class="col-md-3 text-center mb-4 mb-md-0">
                <img src="/image/<%= admin.admin_image %>"
                     class="rounded-circle border border-3 border-primary mb-3"
                     id="photoPreview"
                     style="width:150px; height:150px; object-fit:cover;">

                <label for="admin_image" class="btn btn-outline-primary btn-sm mt-2">
                  <i class="fas fa-camera me-2"></i>Change Photo
                </label>
                <input type="file" name="admin_image" id="admin_image" class="d-none" accept="image/*">
              </div>

              <!-- Profile Details -->
              <div class="col-md-9">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="admin_name" class="form-label">Full Name</label>
                    <input type="text" name="admin_name" id="admin_name" class="form-control"
                           value="<%= admin.admin_name %>" required>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label for="admin_email" class="form-label">Email Address</label>
                    <input type="email" name="admin_email" id="admin_email" class="form-control"
                           value="<%= admin.admin_email %>" required>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="admin_mobile" class="form-label">Mobile Number</label>
                    <input type="tel" name="admin_mobile" id="admin_mobile" class="form-control"
                           value="<%= admin.admin_mobile %>" required>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label for="admin_password" class="form-label">Password</label>
                    <input type="password" name="admin_password" id="admin_password" class="form-control"
                           value="<%= admin.admin_password %>" required>
                  </div>
                </div>
              </div>
            </div>

            <!-- Submit -->
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-save me-2"></i> Update Profile
              </button>
            </div>

          </form>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  // âœ… Preview uploaded profile photo
  document.getElementById('admin_image').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(event) {
        document.getElementById('photoPreview').src = event.target.result;
      };
      reader.readAsDataURL(file);
    }
  });
</script>

