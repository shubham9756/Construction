<%-include('navbar.ejs')%>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  .form-box {
    background: #fff;
    border-radius: 4px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    overflow: hidden;
  }
  /* Title Bar */
  .form-title {
    background: linear-gradient(to right, #290566, #4b3f92, rgb(183, 121, 219));
    
    border-left: gold 8px solid;
    color: #fff;
    font-weight: bold;
    padding: 10px 15px;
    font-size: 16px;
  }
  /* Golden border */
  .form-control {
    border: 2px solid rgb(10, 9, 3) !important;
  }
  label.form-label {
    font-weight: 600;
    font-size: 13px;
    text-transform: uppercase;
  }
  /* Purple Button */
  .btn-purple {
    background-color: #6a1b9a;
    color: #fff;
    font-weight: 600;
  }
  .btn-purple:hover {
    background-color: #5a32a3;
    color: #fff;
  }
</style>
</head>
<body class="bg-light">

<div class="container mt-4">
  <div class="form-box">
    <!-- Title -->
    <div class="form-title">
      EDIT CONTRACTOR <%= contractor.contractor_name %>
    </div>

    <!-- Form -->
    <form action="/update_contractor" method="post" enctype="multipart/form-data" class="needs-validation p-3" novalidate>
        <input type="hidden" name="contractor_id" value="<%= contractor.contractor_id %>">
        <input type="hidden" name="existing_image" value="<%= contractor.contractor_image %>">

      <div class="row g-3">
        
        <!-- Contractor Name -->
        <div class="col-md-6">
          <label class="form-label">CONTRACTOR NAME*</label>
          <input type="text" class="form-control" name="contractor_name" value="<%= contractor.contractor_name %>" required>
          <div class="invalid-feedback">Contractor Name is required.</div>
        </div>

        <!-- Contractor Address -->
        <div class="col-md-6">
          <label class="form-label">CONTRACTOR ADDRESS*</label>
          <input type="text" class="form-control" name="contractor_address" value="<%= contractor.contractor_address %>" required>
          <div class="invalid-feedback">Contractor Address is required.</div>
        </div>

        <!-- Contractor Other Details -->
        <div class="col-md-6">
          <label class="form-label">CONTRACTOR OTHER DETAILS</label>
          <input type="text" class="form-control" name="contractor_details" value="<%= contractor.contractor_details %>">
        </div>

        <!-- Contractor Mobile -->
        <div class="col-md-6">
          <label class="form-label">CONTRACTOR MOBILE*</label>
          <input type="tel" class="form-control" name="contractor_mobile" value="<%= contractor.contractor_mobile %>" required pattern="[0-9]{10}">
          <div class="invalid-feedback">Enter a valid 10-digit mobile number.</div>
        </div>

        <!-- Contractor Aadhar -->
        <div class="col-md-6">
          <label class="form-label">CONTRACTOR ADHAR CARD NO</label>
          <input type="text" class="form-control" name="contractor_aadhar" value="<%= contractor.contractor_aadhar %>" pattern="[0-9]{12}">
          <div class="invalid-feedback">Aadhar must be 12 digits.</div>
        </div>

        <!-- Contractor PAN -->
        <div class="col-md-6">
          <label class="form-label">CONTRACTOR PAN CARD NO</label>
          <input type="text" class="form-control" name="contractor_pan" value="<%= contractor.contractor_pan %>" pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}">
          <div class="invalid-feedback">Enter a valid PAN (ABCDE1234F).</div>
        </div>

        <!-- Contractor Image -->
        <div class="col-md-6">
          <label class="form-label">CONTRACTOR IMAGE</label>
          <input type="file" class="form-control" name="contractor_image">
        </div>

        <!-- Contractor Type -->
        <div class="col-md-6">
          <label class="form-label">CONTRACTOR TYPE</label>
          <input type="text" class="form-control" name="contractor_type" value="<%= contractor.contractor_type %>">
        </div>

      </div>

      <!-- Submit Button -->
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-purple px-4">UPDATE CONTRACTOR</button>
      </div>
    </form>
  </div>
</div>

<%-include('footer.ejs')%>
