    <%-include('navbar')%>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #faf8fc;
        margin: 20px;
      }
      .card {
        background: #fff;
        border: 1px solid #ddd;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      }
      .card-header {
        background: linear-gradient(to right, #2c3e94, #556cd6);
        padding: 10px 15px;
        color: #fff;
        font-weight: bold;
        font-size: 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .btn-close {
        background: #8e44ad;
        color: #fff;
        padding: 5px 12px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 13px;
      }
      .btn-close:hover {
        background: #732d91;
      }

      /* Top Tabs */
      .tab-section {
        display: flex;
        margin: 10px;
        gap: 4px;
      }
      .tab {
        padding: 6px 14px;
        font-size: 13px;
        background: #fff;
        border: 1px solid #ccc;
        cursor: pointer;
      }
      .tab.active {
        background: #c9a019;
        color: #fff;
        font-weight: bold;
      }

      /* Table */
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        font-size: 14px;
      }
      table th,
      table td {
        border: 1px solid #ddd;
        padding: 8px 12px;
        text-align: left;
      }
      .action-icons {
        display: flex;
        gap: 6px;
        justify-content: center;
      }
      .badge {
        display: inline-block;
        padding: 3px 7px;
        font-size: 12px;
        background: #6c757d;
        color: #fff;
        border-radius: 4px;
      }
      .edit-icon {
        color: #8e44ad;
        margin-left: 5px;
        cursor: pointer;
      }
      .total-row td {
        background: #fbc02d;
        font-weight: bold;
        text-align: right;
      }
      .total-row td:first-child {
        text-align: left;
      }
      .action-icons a {
        text-decoration: none;
      }
    </style>
    <br>
    <br>
    <div class="card">
      <!-- Header -->
      <div class="card-header">
        FLAT LIST SELL
        <a href="flat_Sale_closed_bill_list.html" class="btn-close"
          >Closed Bill List</a
        >
      </div>

      <!-- Top Tabs -->
      <div class="tab-section">
        <div class="tab active" id="tab-prathmesh">Prathmesh Elite</div>
        <div class="tab" id="tab-apartment">APARTMENT</div>
      </div>

      <!-- Table -->
      <table>
        <thead>
          <tr>
            <th></th>
            <th>SN</th>
            <th>FLAT/SHOP NO</th>
            <th>CUSTOMER NAME</th>
            <th>TOTAL PAYMENT</th>
            <th>RECEIVED</th>
            <th>PENDING</th>
          </tr>
        </thead>
        <tbody id="table-body">
         <tr>
          <%for(var i=0;i<result.length;i++){ %>
            <td class="action-icons">
             <a href="bill_details.html" title="View Bill"><i class="fas fa-eye text-primary"></i></a>
                <a href="payment_received.html" title="Receive Payment"><i class="fas fa-rupee-sign text-success"></i></a>
                <a href="print_bill.html" title="Print Bill"><i class="fas fa-print text-info"></i></a>
                <a href="delete_bill.html" title="Delete"><i class="fas fa-trash-alt text-danger"></i></a>            </td>
            <td><%=i+1%></td>
            <td><%=result[i].flat_name%></td>
            <td><%=result[i].customer_name%></td>
            <td><%=result[i].total_payment%></td>
            <td><%=result[i].received%></td>
            <td><%=result[i].pending%></td>
         </tr>
         <%} %>
        </tbody>
      </table>
    </div>

   
    <%-include('footer')%>