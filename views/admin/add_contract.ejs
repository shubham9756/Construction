<%-include('navbar.ejs')%>

 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <style>
        :root {
            --primary-blue: #2c499c;
            --secondary-blue: #3d66b9;
            --text-color: #333;
            --border-color: #ccc;
            --input-bg: #fff;
            --button-color: #ff69b4;
            --button-text-color: #fff;
        }

        body {
            background-color: #f0f2f5;
            font-family: Arial, sans-serif;
            color: var(--text-color);
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 0;
            padding: 0;
            overflow: hidden;
        }

        .form-header {
            background: linear-gradient(to right, #004aad, #6a82fb);
            color: #fff;
            padding: 8px 15px;
            font-weight: bold;
            font-size: 1rem;
            border-left: 10px solid #f7c800; 
        }
  
        .form-section {
            padding: 30px;
        }

        .form-label {
            font-weight: bold;
            color: #555;
            font-size: 0.8rem;
            margin-bottom: 5px;
        }
        
        .form-control {
            border: 1px solid var(--border-color);
            box-shadow: none;
            height: 38px;
            font-size: 0.9rem;
            border-radius: 0;
        }

        .form-control::placeholder {
            color: #aaa;
        }
        
        textarea.form-control {
            height: 110px;
            resize: none;
        }

        .input-group-text {
            background-color: #eee;
            border: 1px solid var(--border-color);
            color: #555;
            font-size: 0.9rem;
            border-radius: 0;
            cursor: pointer;
        }

        /* Hide browser's default calendar icon */
        input[type="date"]::-webkit-calendar-picker-indicator {
            display: none;
            -webkit-appearance: none;
        }

        .tax-table {
            border-collapse: collapse;
            width: 100%;
        }

        .tax-table td {
            padding: 8px;
            border: 1px solid var(--border-color);
            vertical-align: middle;
        }

        .tax-table .input-group {
            width: 100%;
        }

        .tax-table input.form-control {
            height: 38px;
            text-align: right;
            border-radius: 0;
            border-color: #ccc;
        }

        .tax-table td:first-child {
            font-weight: bold;
            color: #555;
            padding-left: 15px;
            width: 25%;
        }
        
        .tax-table td:nth-child(2) {
            width: 35%;
        }
        
        .tax-table td:nth-child(3) {
            width: 40%;
        }

        .total-row {
            font-weight: bold;
            background-color: #f9f9f9;
        }
        
        .total-row td:first-child {
            padding-left: 15px;
        }
        
        .total-row td:last-child {
            font-weight: normal;
        }

        .save-button-container {
            text-align: center;
            margin-top: 30px;
        }

        .save-button {
            background-color: #f54291;
            border: none;
            color: #fff;
            font-weight: 600;
            font-size: 14px;
            padding: 10px 30px;
            border-radius: 4px;
        }

        .save-button:hover {
            background-color: #d63384;
        }
    </style>
</head>
<body>

<div class="container">
  <div class="form-header">
    ADD NEW CONTRACTOR
  </div>
    
    <div class="form-section">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="mb-4">
                    <form action="/save_contract" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <input type="hidden" name="contractor_id" value="<%= contractor.contractor_id %>">
                    <label for="contractLabel" class="form-label">CONTRACT LABEL/NAME*</label>
                    <input type="text" class="form-control" id="contractLabel" placeholder="ENTER CONTRACT LABEL/NAME" name="contract_name" required>
                </div>
                
                <div class="mb-4">
                    <label for="contractStartDate" class="form-label">CONTRACT START DATE*</label>
                    <div class="input-group">
                        <input type="date" class="form-control" id="contractStartDate" value="" name="contract_start_date" required>
                        
                    </div>
                </div>
                
                <div class="mb-4">
                    <label for="contractEndDate" class="form-label">CONTRACT END DATE*</label>
                    <div class="input-group">
                        <input type="date" class="form-control" id="contractEndDate" value="" name="contract_end_date" required>
                       
                    </div>
                </div>

                <div class="mb-4">
                    <label for="contractDetails" class="form-label">CONTRACT DETAILS</label>
                    <textarea class="form-control" id="contractDetails" placeholder="ENTER CONTRACT DETAILS" name="contract_details"></textarea>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-4">
                    <label for="contractAmount" class="form-label">CONTRACT AMOUNT</label>
                    <div class="input-group">
                        <input type="number" class="form-control text-end" id="contractAmount" value="0.00" name="contract_amount">
                        <span class="input-group-text">₹</span>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="tax-table">
                        <tbody>
                            <tr>
                                <td>CGST</td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" class="form-control text-end" value="0.00" name="cgst_per">
                                        <span class="input-group-text">%</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" class="form-control text-end" value="0.00" name="cgst_amount" readonly>
                                        <span class="input-group-text">₹</span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>SGST</td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" class="form-control text-end" value="0.00" name="sgst_per">
                                        <span class="input-group-text">%</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" class="form-control text-end" value="0.00" name="sgst_amount" readonly>
                                        <span class="input-group-text">₹</span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>OTHER TAX</td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" class="form-control text-end" value="0.00" name="other_tax_per">
                                        <span class="input-group-text">%</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" class="form-control text-end" value="0.00" name="other_tax_amount" readonly>
                                        <span class="input-group-text">₹</span>
                                    </div>
                                </td>
                            </tr>
                            <tr class="total-row">
                                <td>TOTAL</td>
                                <td></td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" class="form-control text-end" value="0.00" name="total_amount" readonly>
                                        <span class="input-group-text">₹</span>
                                    </div>
                                    
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="save-button-container">
            <button type="submit" class="btn save-button">SAVE CONTRACT</button>
        </div>
        </form>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", () => {
    
        
        // Form Fields
    
        const fields = {
            amount: document.getElementById("contractAmount"),
    
            cgstPercent: document.querySelector(".tax-table tr:nth-child(1) td:nth-child(2) input"),
            cgstValue:   document.querySelector(".tax-table tr:nth-child(1) td:nth-child(3) input"),
    
            sgstPercent: document.querySelector(".tax-table tr:nth-child(2) td:nth-child(2) input"),
            sgstValue:   document.querySelector(".tax-table tr:nth-child(2) td:nth-child(3) input"),
    
            otherPercent: document.querySelector(".tax-table tr:nth-child(3) td:nth-child(2) input"),
            otherValue:   document.querySelector(".tax-table tr:nth-child(3) td:nth-child(3) input"),
    
            total: document.querySelector(".total-row td:nth-child(3) input")
        };
    
        
        //  Utility Functions
    
        const parseNumber = (val) => isNaN(parseFloat(val)) ? 0 : parseFloat(val);
    
        const calculateTax = (base, percentField, valueField) => {
            const percent = parseNumber(percentField.value);
            const value = (base * percent) / 100;
            valueField.value = value.toFixed(2);
            return value;
        };
    
        // Reset all fields
        const resetFields = () => {
            Object.values(fields).forEach(input => {
                if (input) input.value = "0.00";
            });
        };
    
        // Core calculation
        const calculateTotal = () => {
            const base = parseNumber(fields.amount.value);
    
            const cgst = calculateTax(base, fields.cgstPercent, fields.cgstValue);
            const sgst = calculateTax(base, fields.sgstPercent, fields.sgstValue);
            const other = calculateTax(base, fields.otherPercent, fields.otherValue);
    
            const total = base + cgst + sgst + other;
            fields.total.value = total.toFixed(2);
        };
    
        
    
        [fields.amount, fields.cgstPercent, fields.sgstPercent, fields.otherPercent]
            .forEach(input => input.addEventListener("input", calculateTotal));
    
    
    
    
        resetFields();   // Reset all fields when page loads
    });
    </script>
    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


